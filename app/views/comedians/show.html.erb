<body style="background: black; color: white">
  <div>
    <h2><%= @comedian.name %></h2>
    <img src=<%= @comedian.image_url %> alt=<%= @comedian.name %> style="width:200px;height:200px;">
    <p><b>Age:</b> <%= @comedian.age %></p>
    <p><b>Birthplace:</b> <%= @comedian.birthplace %></p>
    <div>
      <h4><%= @comedian.specials_count %> Specials:</h4>
      <% @comedian.specials.each do |special| %>
        <ol><%= special.name %>: <%= special.running_time %> mins</ol>
      <% end %>
    </div>
  </div>
  <%= link_to "<< Back to Comedians List", comedians_path %>
</body>
